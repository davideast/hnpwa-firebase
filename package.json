{
  "name": "hnpwa-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "fs-extra": "^3.0.1",
    "lighthouse": "^2.1.0",
    "workbox-build": "^1.0.1"
  },
  "devDependencies": {
    "firebase-tools": "^3.9.1",
    "lighthouse-ci": "https://github.com/ebidel/lighthouse-ci"
  },
  "scripts": {
    "test": "echo \"No test specified\" && exit 0",
    "copy:workbox": "cp node_modules/workbox-sw/build/importScripts/* src/",
    "tsc": "tsc -p functions/tsconfig.json",
    "build:css": "npm run tsc && node functions/css/embed.js",
    "build:sw": "npm run copy:workbox && node build/sw.build.js",
    "build": "npm run build:css && cp -R src/ ./public && mv ./public/index.html functions/ && npm run build:sw",
    "serve": "npm run tsc && firebase serve --only functions,hosting"
  },
