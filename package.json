    "tsc": "node_modules/.bin/tsc -p src/server/tsconfig.json && node_modules/.bin/tsc -p src/build/tsconfig.json",
    "tsc:watch": "node_modules/.bin/tsc -p src/server/tsconfig.json -w",
    "build:clean": "rm -rf dist",
    "build": "npm run build:clean && npm run tsc && node dist/build/build/build.js",
    "serve": "npm run tsc && firebase serve --only functions,hosting",
    "fns:deps": "cd dist/functions && npm i",
    "deploy": "cd dist/functions && npm i && firebase deploy --token \"$FIREBASE_TOKEN\" --project hnpwa-firebase",
